<div id='search-modal-mobile' class='modal-mobile'>

    <div class='modal-content-mobile'>
        <form class='search-form-mobile'>
            <div class='search-form-title-mobile'>
                <span class='modal-title'>Search</span>
                <button
                    class='modal-close-button'
                    id='close-modal-btn-mobile'
                    type='button'
                >&times;</button>
            </div>
            <div class='input-container'>
            <input
                type='text'
                class='search-input-mobile'
                placeholder='Search...'
            />
            <button
                class='search-submit-mobile'
                type='submit'
                id='search-submit'
                name='search-btn-mobile'
            >Search</button>
            </div>
        </form>
    </div>

</div>
