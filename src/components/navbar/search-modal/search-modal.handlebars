<div id='search-modal' class='modal'>
    <div class='modal-content'>
        <form class='search-form'>
          <div class="search-form-header">
           <h3 class="search-form-header__text">Search</h3>
           <button class="search-form-header__close-button" id = "close-modal-btn" type="button">&times;</button>
           </div>
           <div class="input-container">
            <input type='text' class='input-container__field' placeholder='Search...' />
            <button
                class='input-container__submit'
                type='submit'
                id='search-submit'
            ></button>
            </div>
        </form>
    </div>

</div>