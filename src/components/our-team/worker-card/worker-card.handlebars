<div class='worker-card'>
    <div class='worker-card__worker-photo' style="background: url({{photoURL}}) no-repeat; background-size: cover;
        background-attachment: scroll;"></div>
    <div class='worker-card__worker-info'>
        <span class='worker-card__worker-name'>{{name}}</span>
        <p class='worker-card__worker-position'>{{position}}</p>
        <div class='worker-card__worker-contacts'>
            <a href='#' class='worker-card__worker-contact' id="worker-facebook"> facebook</a>
            <a href='#' class='worker-card__worker-contact' id="worker-insta">insta</a>
            <a href='#' class='worker-card__worker-contact' id="worker-twitter">twitter</a>
        </div>
    </div>
</div>