<div class='worker-card'>
    <div class='worker-photo' style="background: url({{photoURL}}) no-repeat; background-size: cover;
        background-attachment: scroll;"></div>
    <div class='worker-info'>
        <strong class='worker-name'>{{name}}</strong>
        <p class='worker-position'>{{position}}</p>
        <div class='worker-contacts'>
            <a href='#' class='worker-contact' id="facebook"></a>
            <a href='#' class='worker-contact' id="insta"></a>
            <a href='#' class='worker-contact' id="twitter"></a>
        </div>
    </div>
</div>